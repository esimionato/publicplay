# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
# Post
GET     /posts                      controllers.Posts.index()
POST    /posts                      controllers.Posts.create()
GET     /posts/new                  controllers.Posts.newForm()
GET     /posts/:id/edit             controllers.Posts.editForm(id: Long)
GET     /posts/:id                  controllers.Posts.show(id: Long)
PUT     /posts/:id                  controllers.Posts.update(id: Long)
DELETE  /posts/:id                  controllers.Posts.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
