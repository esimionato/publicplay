# Routes
# This file defines all routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index()
#Users
GET     /users/:key                 controllers.UserController.show(key: String)
GET     /users/self                 controllers.UserController.showSelf()
# Post
GET     /posts                      controllers.PostController.list(p:Int ?= 0)
POST    /posts                      controllers.PostController.create()
GET     /posts/new                  controllers.PostController.newForm()
GET     /posts/:key/rateUp          controllers.PostController.rateUp(key: Long)
GET     /posts/:key/rateDown        controllers.PostController.rateDown(key: Long)
GET     /posts/:key/rate            controllers.PostController.rateShow(key: Long)
GET     /posts/:key/edit            controllers.PostController.editForm(key: Long)
POST    /posts/:key/update          controllers.PostController.update(key: Long)
GET     /posts/:key/delete          controllers.PostController.delete(key: Long)
GET     /posts/:key/:title          controllers.PostController.show(key: Long, title: String, p:Int ?= 0)
# Comment
POST    /posts/:postKey                             controllers.PostController.createComment(postKey: Long, title: String)
GET     /posts/:postKey/comments/:commentKey/edit   controllers.PostController.editCommentForm(postKey: Long, commentKey: Long)
POST    /posts/:postKey/comments/:commentKey        controllers.PostController.updateComment(postKey: Long, commentKey: Long)
GET     /posts/:postKey/comments/:commentKey/delete controllers.PostController.deleteComment(postKey: Long, commentKey: Long)
# Category
GET     /categories                 controllers.CategoryController.list()
POST    /categories                 controllers.CategoryController.create()
GET     /categories/new             controllers.CategoryController.newForm()
GET     /categories/:name/edit      controllers.CategoryController.editForm(name: String)
POST    /categories/:name/update    controllers.CategoryController.update(name: String)
GET     /categories/:name/delete    controllers.CategoryController.delete(name: String)
GET     /categories/:name           controllers.CategoryController.show(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# socialauth integration
# ~~~~
GET     /user/login                     socialauth.controllers.SocialLogin.login
#GET     /user/info                      socialauth.controllers.SocialLogin.info
GET     /user/logout                    socialauth.controllers.SocialLogin.logout
GET     /authenticate/:provider         socialauth.controllers.SocialLogin.authenticate(provider)
POST    /authenticate/:provider         socialauth.controllers.SocialLogin.authenticate(provider)
GET     /authenticate/:provider/done    socialauth.controllers.SocialLogin.authenticateDone(provider)

# crud integration
# ~~~~
GET     /admin/                         controllers.AdminController.index()
GET     /admin/:model/list              controllers.AdminController.list(model, p:Int ?= 0)
POST    /admin/:model                   controllers.AdminController.create(model)
GET     /admin/:model/new               controllers.AdminController.newForm(model)
GET     /admin/:model/:key/edit         controllers.AdminController.editForm(model, key)
POST    /admin/:model/:key/update       controllers.AdminController.update(model, key)
GET     /admin/:model/:key/delete       controllers.AdminController.delete(model, key)
GET     /admin/:model/:key/show         controllers.AdminController.show(model, key)
